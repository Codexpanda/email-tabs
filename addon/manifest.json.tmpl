{
  "manifest_version": 2,
  "name": "Email Tabs",
  "version": "{{version}}",
  "description": "{{{description}}}",
  "author": "{{{author}}}",
  "homepage_url": "{{{homepage}}}",
  "icons": {
    "48": "emailtabs.svg",
    "96": "emailtabs.svg"
  },
  "applications": {
    "gecko": {
      "id": "email-tabs@mozilla.org",
      "strict_min_version": "57.0a1",
      "update_url": "https://testpilot.firefox.com/files/email-tabs@mozilla.org/signed-addon.xpi"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "emailtabs.svg",
    "default_title": "Email tabs",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "notifications",
    "clipboardWrite",
    "<all_urls>"
  ]
}
